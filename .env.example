# Example Environment Variables for Local Development
# Copy this file to .env and update with your values

# Service Configuration
SERVICE_NAME=gofiber-app
ENVIRONMENT=dev
VERSION=1.0.0
LOG_LEVEL=VERBOSE

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# DynamoDB Tables (for local development)
USERS_TABLE=dev-users
SESSIONS_TABLE=dev-sessions
PERMISSIONS_TABLE=dev-permissions

# DynamoDB Local Endpoint (for local testing)
DYNAMODB_ENDPOINT=http://localhost:8000

# Session Configuration
SESSION_DURATION=24h
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Lax

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15m
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Features
MFA_ENABLED=false
EMAIL_VERIFICATION_REQUIRED=false
ALLOW_REGISTRATION=true

# Email Configuration (for password resets)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# AWS SES Configuration (alternative to SMTP)
USE_SES=false
SES_REGION=us-east-1

# Monitoring
ENABLE_TRACING=true
TRACE_SAMPLE_RATE=0.1
METRICS_ENABLED=true

# Development Settings
DEBUG_MODE=true
PRETTY_LOGS=true
DISABLE_AUTH=false

# S3 Configuration (if needed for file uploads)
S3_BUCKET=your-app-uploads-dev
S3_REGION=us-east-1

# External Services
API_KEY_SERVICE_X=your-api-key-here
WEBHOOK_SECRET=your-webhook-secret

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Database Connection Pool
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# Testing
TEST_MODE=false
MOCK_EXTERNAL_SERVICES=true
